            <params>
                <param name="headline" value="true"/>
            </params>
        </property>
        <property name="lastname" type="text_line" mandatory="true" colspan="6">
            <meta>
                <title>Nom</title>
            </meta>
            <tag name="sulu.rlp.part"/>
